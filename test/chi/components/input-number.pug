---
title: Input numbers
---

each size in ['default', 'sm', 'md', 'lg', 'xl']
  div(class=`test-${size}`)
    span.a-h2= `Text Input / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .m-form__item.-row
                  .m-input__wrapper
                    input.a-input(
                      type='number'
                      class={
                        [`-${style}`]: style != 'default',
                        [`-${state}`]: state != 'disabled',
                        [`-${size}`]: size != 'default'
                      }
                      value='0'
                      disabled=state=='disabled'?'disabled': false
                    )
                    button(tabindex='-1', aria-label='Decrease')
                    button(tabindex='-1', aria-label='Increase')

each size in ['default', 'sm', 'md', 'lg', 'xl']
  div(class=`test-expanded-${size}`)
    span.a-h2= `Text Input Expanded / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .m-form__item.-row
                  .m-inputNumber(class={[`-${size}`]: size != 'default'})
                    input.a-input(
                      type='number'
                      class={
                        [`-${style}`]: style != 'default',
                        [`-${state}`]: state != 'disabled',
                        [`-${size}`]: size != 'default'
                      }
                      value='0'
                      disabled=state=='disabled'?'disabled': false
                    )
                    button.a-btn.-icon(tabindex='-1', class={[`-${size}`]: size != 'default'}, aria-label='Decrease')
                      .a-btn__content
                        i.a-icon.icon-minus
                    button.a-btn.-icon(tabindex='-1', class={[`-${size}`]: size != 'default'}, aria-label='Increase')
                      .a-btn__content
                        i.a-icon.icon-plus

