---
title: Radio
---
.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    h5= `Radio / ${state}`
    .m-form__wrapper.-mb--1
      input.a-input(
        type="radio"
        id=`radio-${index}`
        class={
          [`-${state}`]: state == 'focus'
        }
        checked=state=='checked' ? 'checked' : false
        disabled=state=='disabled' ? 'disabled' : false
      )
      label(
        for=`radio-${index}`
        class={
          [`-${state}`]: state == 'hover'
        }
      )
      label(for=`radio-${index}`) Radio

h2 Radio Button List
.test-states
  each state, index in ['default', 'hover', 'focus', 'disabled']
    h5= `Radio / ${state}`
    ul.m-form__wrapper.-list(style="max-width:20rem")
      each element in [1, 2, 3, 4, 5]
        li.m-form__wrapper
          input.a-input(
          type="radio"
          id=`radio--${element}`
          name=`radio`
          class={
            [`-${state}`]: state == 'focus'
          }
          checked=state=='checked' ? 'checked' : false
          disabled=state=='disabled' ? 'disabled' : false
          )
          label(
          for=`radio--${element}`
          class={
            [`-${state}`]: state == 'hover'
          }
          )
          label(for=`radio--${element}`)= `Radio-${element}`
