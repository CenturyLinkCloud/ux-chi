---
title: Input search
---

each size in ['default', 'sm', 'md', 'lg', 'xl']
  div(class=`test-${size}`)
    span.-text--h2= `Text Input / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          td
            .-m--1
              .chi-form__item.-row
                .chi-input__wrapper.-icon--right
                  input.chi-input.chi-search__input(
                    type='search' 
                    class={
                      [`-${state}`]: state != 'disabled',
                      [`-${size}`]:size != 'default'
                    }
                    value='Value'
                    disabled=state=='disabled'?'disabled': false
                  )
                  button.chi-button.-icon.-flat.-bg--none(class={[`-${size}`]: size != 'default'})
                    .chi-button__content
                      i.chi-icon.icon-search
                  button.chi-button.-icon.-close(class={[`-${size}`]: size != 'default'} aria-label='Close')
                    .chi-button__content
                      i.chi-icon.icon-x
