h2 Single icon
.test-single
  .a-grid
    .a-col.-w--2.-middle
      div(class=`a-icon`, data-cy='icon-single')
        svg
          use(xlink:href='#icon-atom')

h2 Sizes
.test-sizes
  .a-grid
    each size in sizes
      .a-col.-w--1.-o--1.-middle
        h4= size
      .a-col.-w--2.-middle
        div(class=`a-icon -${size}`, data-cy=size==='xl'?'icon-size':false)
          svg
            use(xlink:href='#icon-atom')

h2 Colors
.test-colors
  .a-grid
    each color in colors
      .a-col.-w--1.-o--1.-middle
        h4= color
      .a-col.-w--2.-middle
        div(class=`a-icon -lg -text--${color}`, data-cy=color==='primary'?'icon-color':false)
          svg
            use(xlink:href='#icon-atom')

h2 Icons
.test-icons
  .a-grid(data-cy='icon-list')
    each name in icons
      .a-col.-w--2.-o--1.-middle
        .a-icon.-sm
          svg
            use(xlink:href=`#icon-${name}`)
        h4= 'icon-' + name
