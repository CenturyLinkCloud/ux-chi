---
title: Badges

---
each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.a-h2= `Badge / ${type}`
    div
      each style in ['base', 'primary', 'secondary', 'danger', 'dark', 'muted', 'light']
        div(
        class="a-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          span= style
        div(
        class="a-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          .a-badge__content
            .a-icon
              svg
                use(xlink:href='#icon-atom')
            span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        .a-badge(class=`-${size} -m--1`)
          .a-badge__content
            .a-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
        .a-badge(class=`-${size} -m--1`)
          .a-badge__content
            span Badge
            .a-icon
              svg
                use(xlink:href='#icon-atom')
