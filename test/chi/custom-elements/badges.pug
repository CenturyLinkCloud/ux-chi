---
title: Badges
scripts:
- js/ce/ux-chi-ce

---
each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.a-h2= `Badge / ${type}`
    div
      each style in ['base', 'primary', 'secondary', 'danger', 'dark', 'muted', 'inverse', 'light']
        chi-badge(class='-mr--1', outline=`${type === 'outline'}`, flat=`${type === 'flat'}`, color=`${style === 'base' ? '' : style}` )= `${style}`
        chi-badge(class='-mr--1', outline=`${type === 'outline'}`, flat=`${type === 'flat'}`, color=`${style === 'base' ? '' : style}` )
          chi-icon(icon='atom')
          span= style

each type in ['solid', 'outline']
  div(class=`test-pill-${type}`)
    span.a-h2= `Badge / Pill / ${type}`
    table(cellpadding="0", cellspacing="0")
      tr
        each style in ['base', 'primary', 'secondary', 'danger', 'dark', 'muted', 'inverse', 'light']
          td
            chi-badge(pill, class='-mr--1', color=`${style === 'base' ? '' : style}`, outline=`${type === 'outline'}`)= '50'
            chi-badge(pill, class='-mr--1', color=`${style === 'base' ? '' : style}`, outline=`${type === 'outline'}`)
              chi-icon(icon='atom')
              span 50

h2 Badge Icons
.example.-mb--1
  each size in ['smaller', 'small', 'default']
    .p.-text--bold= size
      chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
        chi-icon(icon='atom')
        span Badge
      chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
        span Badge
        chi-icon(icon='atom')
      chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
        chi-icon(icon='atom')
        span Badge
        chi-icon(icon='atom')
