---
title: Spinner
scripts:
  - js/ce/ux-chi-ce
styles:
  - assets/styles/spinner-ce
---
h2 Backdrop

h3 Base
.example.-mb--3(style="height:30rem;width:100%")
  .a-backdrop.-p--6(style="position:relative;height:100%;")
    svg(class=`a-spinner -text--inverse`,viewBox=`0 0 66 66`)
      title Loading
      circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h3 Inverse Backdrop
.example.-mb--3(style="height:30rem;width:100%")
  div.-p--6(style="height:100%;")
    chi-spinner(backdrop='inverse', color='primary')

h2 Sizes
.test-sizes
  .a-grid
    each size in ['xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl']
      .a-col.-w--1.-o--1.-middle
        h4= size
      .a-col.-w--2.-middle
        chi-spinner(size=size, color='muted', id='spinner-size')

h2 Colors
.test-sizes
  .a-grid.-align-items--center
    each type in ['primary', 'success', 'warning', 'danger', 'muted']
      div.-p--2
        chi-spinner(color=type, size='lg', class='-m--3', id='spinner-color')
        p.-text.-text--center(class=`-text--${type}`)
          = `${type}`
