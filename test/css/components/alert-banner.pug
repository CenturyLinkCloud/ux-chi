---
title: Alert Banners
---
each size in ['small']
  div(class=`test-${size} -w100`)
    h3 small center
    each type in ['light', 'success', 'danger', 'warning', 'info', 'dark']
      div(
        class=`m-alert -${type} -${size} -banner -mb2 -alignCenter`
        data-title=`${type}`
      )
        = `This is a ${type} message`
        button

    h4 Has icon
    each type in ['light', 'success', 'danger', 'warning', 'info', 'dark']
      div(
        class=`m-alert -hasIcon -${type} -${size} -banner -mb2 -alignCenter`
        data-title=`${type}`
      )
        = `This is a ${type} message`
        button

each size in ['small', 'medium', 'large']
  div(class=`test-${size} -w100`)
    h3= `${size}`
    each type in ['light', 'success', 'danger', 'warning', 'info', 'dark']
      div(
        class=`m-alert -${type} -banner -mb2`
        class={
          [`-${size}`]: size != 'medium'
        }
        data-title=`${type}`
      )
        = `This is a ${type} message`
        button

    h4 Has icon
    each type in ['light', 'success', 'danger', 'warning', 'info', 'dark']
      div(
        class=`m-alert -hasIcon -${type} -banner -mb2`
        class={
          [`-${size}`]: size != 'medium'
        }
        data-title=`${type}`
      )
        = `This is a ${type} message`
        button
