      .chi-col.-w--6.-w-md--4.-w-lg--2.-p--1
        .example-opacity.-rounded(style=`height:3rem;`)
          .-text.-bg--black.-rounded.-opacity--40(style=`height:3rem;`)
      .chi-col.-w--6.-w-md--4.-w-lg--2.-p--1
