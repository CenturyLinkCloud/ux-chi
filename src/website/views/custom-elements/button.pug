.example.-mb--3
  .a-grid.-noGutter
    .a-col.-w--12.-w-md--6
      .-p--3.-d--flex(style="justify-content: center;")
        each type, val in {Base:'', Primary:'primary', Dark:'dark'}
          .-pr--2
            chi-button(color=type, pill)= val
    .a-col.-w--12.-w-md--6
      .-p--3.-bg--black.-d--flex(style="justify-content: center;")
        each type, val in {Secondary:'secondary', Light:'light'}
          .-pr--2
            chi-button(color=type, pill)= val
  :code(lang='html')
    <chi-button pill>Base</chi-button>
    <chi-button color='primary' pill>Primary</chi-button>
    <chi-button color='dark' pill>Dark</chi-button>
    <chi-button color='secondary' pill>Secondary</chi-button>
    <chi-button color='light' pill>Light</chi-button>


