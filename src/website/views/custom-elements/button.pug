    <chi-button color='dark' pill outline>Dark</chi-button>

h3 Icon buttons
p.-text
  | For interfaces with limited space, an <code>icon</code> button can
  | be used for common actions such as editing, deleting, closing, etc.
.example.-mb--3
  .-p--3
    chi-button(type='icon')
      .a-btn__content
        chi-icon(icon='atom')
    chi-button(flat, class='-ml--2', type='icon')
      .a-btn__content
        chi-icon(icon='atom')
  :code(lang='html')
    <chi-button type='icon' >
      <div class="a-btn__content">
        <chi-icon icon='atom' />
      </div>
    </chi-button>

    <!-- flat -->
    <chi-button flat type='icon' >
      <div class="a-btn__content">
        <chi-icon icon='atom' />
      </div>
    </chi-button>

h4 Labeled icon buttons
.example.-mb--3
  .-p--3(style="display:inline-flex;")
    chi-button()
      .a-btn__content
        chi-icon(icon='atom')
        span Button
    chi-button(class='-mr--2 -ml--2')
      .a-btn__content
        span Button
        chi-icon(icon='atom')
    chi-button()
      .a-btn__content
        chi-icon(icon='atom')
        span Button
        chi-icon(icon='atom')
  :code(lang='html')
    <!-- left aligned -->
    <chi-button>
      <div class="a-btn__content">
        <chi-icon icon='atom' />
        <span>Button</span>
      </div>
    </chi-button>

    <!-- right aligned -->
    <chi-button>
      <div class="a-btn__content">
        <span>Button</span>
        <chi-icon icon='atom' />
      </div>
    </chi-button>

    <!-- both sides -->
    <chi-button>
      <div class="a-btn__content">
        <chi-icon icon='atom' />
        <span>Button</span>
        <chi-icon icon='atom' />
      </div>
    </chi-button>

