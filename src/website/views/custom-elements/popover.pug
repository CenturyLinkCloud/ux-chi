script.
  document.addEventListener(
    'DOMContentLoaded',
    function () {

      chi.tab(document.querySelectorAll('#a-tabs--positioning, #a-tabsb--positioning, #a-tabs-e5, #a-tabs-e6'));

      var popovers = [
        {button: '#example-3-button',               popover: '#example-3-popover',              action: "toggle"},
        {button: '#example-4-t-button',             popover: '#example-4-t-popover',            action: "toggle"},
        {button: '#example-4-ts-button',            popover: '#example-4-ts-popover',           action: "toggle"},
        {button: '#example-4-te-button',            popover: '#example-4-te-popover',           action: "toggle"},
        {button: '#example-4-r-button',             popover: '#example-4-r-popover',            action: "toggle"},
        {button: '#example-4-rs-button',            popover: '#example-4-rs-popover',           action: "toggle"},
        {button: '#example-4-re-button',            popover: '#example-4-re-popover',           action: "toggle"},
        {button: '#example-4-b-button',             popover: '#example-4-b-popover',            action: "toggle"},
        {button: '#example-4-bs-button',            popover: '#example-4-bs-popover',           action: "toggle"},
        {button: '#example-4-be-button',            popover: '#example-4-be-popover',           action: "toggle"},
        {button: '#example-4-l-button',             popover: '#example-4-l-popover',            action: "toggle"},
        {button: '#example-4-ls-button',            popover: '#example-4-ls-popover',           action: "toggle"},
        {button: '#example-4-le-button',            popover: '#example-4-le-popover',           action: "toggle"},
        {button: '#example-5-button-show',          popover: '#example-5-popover',              action: "show"},
        {button: '#example-5-button-hide',          popover: '#example-5-popover',              action: "hide"},
        {button: '#example-5-button-toggle',        popover: '#example-5-popover',              action: "toggle"},
        {button: '#example-6-auto-hide-button',     popover: '#example-6-auto-hide-popover',    action: "toggle"},
        {button: '#example-6-no-auto-hide-button',  popover: '#example-6-no-auto-hide-popover', action: "toggle"}
      ];

      Array.prototype.forEach.call(popovers, function(popover){
        document.querySelector(popover.button).addEventListener('click', function () {
          var popoverElem = document.querySelector(popover.popover);
          switch (popover.action) {
            case 'show':
              popoverElem.show();
              break;
            case 'hide':
              popoverElem.hide();
              break;
            default:
              popoverElem.toggle();
          }
        });
      });
    }
  );
