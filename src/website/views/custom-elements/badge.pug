        chi-badge(class='-m--1', color='light', outline)= 'Light'
  :code(lang="html")
    <!-- For light backgrounds -->
    <chi-badge color='primary' outline>Primary</chi-badge>
    <chi-badge color='success' outline>Success</chi-badge>
    <chi-badge color='warning' outline>Warning</chi-badge>
