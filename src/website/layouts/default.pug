- var defaultMetaDescription = "Chi is CenturyLink's design system for building consistent digital products and experiences."

doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        if title
            title Chi - #{title}
            if !description
                meta(name="description", content=`${defaultMetaDescription}`)
        else
            title Chi - Documentation
            if !description
                meta(name="description", content=`${defaultMetaDescription}`)
        if description
            meta(name="description", content=description)
        link(rel="stylesheet", href=`${rootPath}chi.css`, max-age=2628000)
        link(rel="stylesheet", href=`${rootPath}assets/styles/chi-docs.css`, max-age=2628000)
        link(rel="icon", href=`${rootPath}assets/images/favicon.ico`, type="image/ico", sizes="16x16", max-age=2628000)
        script(src=`${rootPath}assets/scripts/globalConfigs.js`, max-age=2628000)
        script(src=`${rootPath}assets/scripts/chiVersionCheck.js`, max-age=2628000)
        script(src=`${rootPath}js/chi.js`, max-age=2628000)
        if styles
            each style in styles
                link(rel="stylesheet", media="all", href=`${rootPath}${style}.css`, max-age=2628000)
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.css", max-age=2628000)

    body.chi.show-grid
      #docs-container.docs-container
        include partials/header
        if nondoc
            main.docs-body.-non-doc
                nav.docs-sidenav
                    include partials/sidenav

                .docs-article
                    header.docs-titlebar
                        include partials/titlebar
                    section.chi-grid__container.-pt--3
                        != contents
        else
            main.docs-body
                nav.docs-sidenav
                    include partials/sidenav

                article.docs-article
                    header.docs-titlebar
                        include partials/titlebar
                    section.chi-grid__container.-pt--3
                        != contents
      script(type="text/javascript", src="https://cdn.jsdelivr.net/npm/docsearch.js@2/dist/cdn/docsearch.min.js")
      script(type="text/javascript", src=`${rootPath}assets/scripts/algoliaSearch.js`, max-age=2628000)
      script(src=`${rootPath}assets/scripts/chi-docs.js`, max-age=2628000)

      if scripts
          each script in scripts
              script(type="text/javascript", src=`${rootPath}${script}.js`, max-age=2628000)
