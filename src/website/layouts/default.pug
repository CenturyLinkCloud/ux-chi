doctype html
html(lang="en")
    head
        if title
            title Chi &middot; #{title}
        else
            title Chi &middot; Documentation
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href=`${rootPath}chi.css`)
        link(rel="stylesheet", href=`${rootPath}assets/styles/chi-docs.css`)

        if styles
            each style in styles
                link(rel="stylesheet", media="all", href=`${rootPath}assets/styles/${style}.css`)

    body.chi.show-grid
      .docs-container
        include partials/header

        section.docs-body
          include partials/aside

          if (title == 'BE Pricing' || title == 'Order Checkout Flow')

            .docs-body__content
              .a-grid__container.-fullpage(style='min-width:1160px; width:100%')
                h2.-ml--3= title
                != contents

          else

            .docs-body__content
              .a-grid__container
                h2= title
                != contents

      script(src=`${rootPath}js/chi.js`)
      script(src=`${rootPath}assets/scripts/chi-docs.js`)
      script(src=`${rootPath}chi-icons.js`)

      if scripts
          each script in scripts
              script(type="text/javascript", src=`${rootPath}/assets/scripts/${script}.js`)
