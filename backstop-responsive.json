{
  "id": "chi-responsive",
  "viewports": [
    {
      "label": "iphone_4",
      "width": 320,
      "height": 480
    },
    {
      "label": "iphone_4--landscape",
      "width": 480,
      "height": 320
    },
    {
      "label": "iphone_7",
      "width": 375,
      "height": 667
    },
    {
      "label": "iphone_7--landscape",
      "width": 667,
      "height": 375
    },
    {
      "label": "ipad_2",
      "width": 768,
      "height": 1024
    },
    {
      "label": "ipad_2--landscape",
      "width": 1024,
      "height": 768
    },
    {
      "label": "ipad_pro",
      "width": 1024,
      "height": 1366
    },
    {
      "label": "ipad_pro--landscape",
      "width": 1366,
      "height": 1024
    },
    {
      "label": "galaxy_tab",
      "width": 800,
      "height": 1280
    },
    {
      "label": "galaxy_tab--landscape",
      "width": 1280,
      "height": 800
    },
    {
      "label": "macbook_air_11_2011",
      "width": 1366,
      "height": 768
    },
    {
      "label": "macbook_pro_15_2014",
      "width": 1680,
      "height": 1050
    },
    {
      "label": "cinema_display",
      "width": 2560,
      "height": 1440
    }
  ],
  "fileNameTemplate": "{scenarioLabel}_{selectorLabel}_{viewportLabel}",
  "scenarios": [
    {
      "label": "alert-banner",
      "url": "http://localhost:8000/components/alert-banner.html",
      "selectors": [
        ".test-small",
        ".test-medium",
        ".test-large"
      ]
    },
    {
      "label": "alert-bubble",
      "url": "http://localhost:8000/components/alert-bubble.html",
      "selectors": [
        ".test-small",
        ".test-medium",
        ".test-large"
      ]
    },
    {
      "label": "alert-toast",
      "url": "http://localhost:8000/components/alert-toast.html",
      "selectors": [
        ".test-toast"
      ]
    },
    {
      "label": "grid",
      "url": "http://localhost:8000/components/grid.html",
      "selectors": [
        ".test-flex-cells",
        ".test-no-gutter",
        ".test-automatic-column-sizing",
        ".test-mixed-column-sizing",
        ".test-specific-column-sizing",
        ".test-wrapping",
        ".test-offsets",
        ".test-reordering",
        ".test-responsive-column-stacking",
        ".test-mixed-responsive-column-sizing",
        ".test-responsive-offsets",
        ".test-vertical-alignment-on-container",
        ".test-vertical-alignment-on-column"
      ]
    },
    {
      "label": "modals",
      "url": "http://localhost:8000/components/modals.html",
      "selectors": [
        ".test-window-base",
        ".test-headers",
        ".test-footers"
      ]
    },
    {
      "label": "typography",
      "url": "http://localhost:8000/foundations/typography.html",
      "selectors": [
        ".test-headers",
        ".test-colors",
        ".test-paragraph"
      ]
    }
  ],
  "paths": {
    "bitmaps_reference": "config/backstop_data/bitmaps_reference/responsive",
    "bitmaps_test": "test/bitmaps_test/responsive",
    "html_report": "reports/html_report/responsive",
    "ci_report": "reports/ci_report/responsive"
  },
  "report": [
    "CI"
  ],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [ "--disable-dev-shm-usage" ]
  },
  "asyncCaptureLimit": 1
}
